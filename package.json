{
  "name": "playwright-ts",
  "version": "1.0.0",
  "description": "playwright test framework for celigo ui/ux automation",
  "main": "index.js",
  "scripts": {
    "test": "rm -rf ./allure-results && npx playwright test --trace=on --project=PLAYWRIGHT --headed --config=node_modules/@celigo/ui-core-automation/dist/playwright.config.js",
    "test:smoke": "rm -rf ./allure-results && npx playwright test --project=PLAYWRIGHT --headed --config=node_modules/@celigo/ui-core-automation/playwright.config.ts --grep '@smoke'",
    "test:visual": "npm run storybook-build && npx playwright test --config=node_modules/@celigo/ui-test-automation/dist/visual.config.js --workers 3",
    "updateSnapshots": "npm run storybook-build && npx playwright test --config=node_modules/@celigo/ui-test-automation/dist/visual.config.js --update-snapshots",
    "build": "rm -rf ./dist && npx tsc",
    "build:watch": "npx tsc -w",
    "report": "allure generate allure-results --clean -o allure-report && allure open allure-report",
    "lint": "eslint . --ext .ts --quiet",
    "lint-and-fix": "eslint --fix --ext .ts .",
    "trace": "npx playwright show-trace node_modules/@celigo/ui-core-automation/test-results/**/trace.zip",
    "uploadReport": "node uploadReport.js",
    "test-remote": "rm -rf ./allure-results && npx playwright test --project=PLAYWRIGHT --config=node_modules/@celigo/ui-core-automation/dist/playwright.config.js"
  },
  "keywords": [],
  "author": "B Vinay Kumar",
  "license": "ISC",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/celigo/celigo-qa-automation.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build"
    }
  },
  "devDependencies": {
    "@celigo/ui-core-automation": "^0.0.67",
    "@celigo/aut-selectors": "^0.0.49",
    "@celigo/aut-utilities": "^0.0.14",
    "@playwright/test": "^1.32.3",
    "allure-playwright": "^2.2.1",
    "playwright": "^1.32.3"
  },
  "dependencies": {
    "atob": "^2.1.2",
    "husky": "^4.3.8",
    "viewport-dimensions": "^0.2.0"
  }
}
